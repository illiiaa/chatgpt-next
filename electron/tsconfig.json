{
  "compilerOptions": {
    "outDir": "dist",

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

//    added?
    /* Strictness */
//    "strict": false,
//    "noUncheckedIndexedAccess": false,
//    "checkJs": true,

    /* Strictness */
//    "strict": true,
//    "noUncheckedIndexedAccess": false,
//    "checkJs": true,
//    "noImplicitAny": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "sourceMap": true,
//    "jsx": "preserve",
//    "plugins": [{"name": "next"}],

    /* Custom options */
//    "forceConsistentCasingInFileNames": true,
//    "jsxImportSource": "@emotion/react",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
//      "~/common/*": ["../src/common/*"],
//      "~/modules/*": ["../src/modules/*"],
//      "~/server/*": ["../src/server/*"]
    }
  },
  "include": ["src/**/*"],
}
